<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .cont {
            background-color: aliceblue;
            padding: 2rem 0;
            padding-left: 15px; 
            padding-right: 15px; 
            height: 100vh;
        }
    </style>
    <title>Home</title>
</head>
<body>

    <!-- nav bar -->
<nav class="navbar navbar-expand-lg bg-light">
  <div class="container-fluid">
    
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="http://localhost:3000/home">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="http://localhost:3000/new">New Idea</a>
        </li>
        </ul>
      <form class="d-flex" action="http://localhost:3000/login" method="get">
        <button class="btn btn-outline-danger" type="submit">logout</button>
      </form>
    </div>
  </div>
</div>
  </div>
</nav>

    <div class="cont">
  <div class="container-fluid">
    <div class="row g-4">
      <% for (let id of ideas) { %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex">
          <div class="card flex-fill" style="width: 18rem; height: 350px;">
            <img src="..." class="card-img-top" alt="...">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= id.title %></h5>
              <p class="card-text" style="flex:1;">
                <%= id.idea.length > 200 ? id.idea.substring(0, 200) + "..." : id.idea %>
              </p>
              <form method="get" action="/idea/<%= id._id %>">
    <button class="btn btn-primary mt-auto" type="submit">More Info</button>
</form>
              
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>
</body>
</html>